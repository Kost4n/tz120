<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="13dp"/>
            <gradient
                android:startColor="@color/black_gradient_2"
                android:endColor="@color/black_gradient_1"
                android:angle="90"
                android:type="linear"/>
            <stroke
                android:width="1dp"
                android:color="#FF000000" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom">
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:startColor="@color/green_gradient_2"
                    android:endColor="@color/green_gradient_1"
                    android:angle="90"
                    android:type="linear"/>
                <stroke
                    android:width="1dp"
                    android:color="#FF000000" />
            </shape>
        </clip>
    </item>
</layer-list>